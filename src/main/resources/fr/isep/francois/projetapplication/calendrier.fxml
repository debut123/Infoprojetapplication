<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.isep.francois.projetapplication.CalendrierController">

    <!-- Conteneur pour les boutons "Précédent" et "Suivant" côte à côte -->
    <HBox fx:id="navigationBox" spacing="20" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0">
        <Button fx:id="prevMonthButton" text="Précédent"/>
        <Button fx:id="nextMonthButton" text="Suivant"/>
    </HBox>

    <!-- Grille du calendrier -->
    <GridPane fx:id="calendarGrid" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="50.0" hgap="10" vgap="10">
        <!-- Titre du mois sera ajouté dynamiquement -->
    </GridPane>

    <!-- Nouveau bouton ajouté après la grille du calendrier -->
    <Button fx:id="newActionButton" text="Accueil"
            AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
            onAction="#OpenNewPageaccueil"/>


</AnchorPane>
